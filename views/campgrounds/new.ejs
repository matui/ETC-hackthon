<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="start_point" placeholder="起點">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="destination" placeholder="終點">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="vehicle_type" placeholder="車種">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="描述(ex. 可否共乘？)">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

