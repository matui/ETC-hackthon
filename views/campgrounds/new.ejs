<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">第二步驟 創建里程</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <% console.log(rd) %>
                    <p>請選擇 起點</p>
                    <select class="form-control" type="text" name="start_point" placeholder="起點">
                    <% console.log(l1.length) %>
                    <% l1.forEach(function(item,i){ %>
                        <option> <%= item %> </option>
                    <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <p>請選擇 終點</p>
                    <select class="form-control" type="text" name="destination" placeholder="起點">
                    <% console.log(l1.length) %>
                    <% l1.forEach(function(item,i){ %>
                        <option> <%= item %> </option>
                    <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="hidden" name="road_type" placeholder= <%= rd %> value=<%= rd %> > 
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="vehicle_type" placeholder="聯絡電話（共乘用）">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="fee" placeholder="預收的共乘費（每位）">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="可共乘位數">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

